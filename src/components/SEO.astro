---
const props = Astro.props
const defaultThumbnail = "https://avatars.githubusercontent.com/u/215421490?v=4"
const siteName = "Ahmeng Labs"
const siteUrl = "https://ahmenglabs.codes"
const currentUrl = `${siteUrl}${Astro.url.pathname}`
const author = "Ahmeng Labs"
---
<link rel="canonical" href={currentUrl} />
<meta name="author" content={author} />
<meta name="description" content={props.description} />
<meta name="keywords" content={props.keywords.join(",").toLowerCase()} />

<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
<link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
<link rel="manifest" href="/site.webmanifest" />

<meta property="og:type" content="website" />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={props.title || siteName} />
<meta property="og:description" content={props.description} />
<meta property="og:image" content={props.thumbnail || defaultThumbnail} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="id_ID" />

<meta property="twitter:site" content="@ahmenglabs" />
<meta property="twitter:creator" content="@ahmenglabs" />
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={currentUrl} />
<meta property="twitter:title" content={props.title || siteName} />
<meta property="twitter:description" content={props.description} />
<meta property="twitter:image" content={props.thumbnail || defaultThumbnail} />
<meta property="twitter:image:alt" content={props.title || siteName} />